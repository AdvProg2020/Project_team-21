<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="GUIControllers.SignUpPage"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@/css/signUpPageStyle.css"
            styleClass="wholePageContainer">



    <StackPane
            AnchorPane.topAnchor="100"
            alignment="TOP_CENTER">

    <VBox>
        <VBox styleClass="inputContainer">
            <Label
                    text="Username"
            >
            </Label>

            <TextField
                    styleClass="inputField"
            >
            </TextField>
        </VBox>

       <HBox>
           <VBox styleClass="inputContainer">
               <Label
                       text="Password"
               >
               </Label>

               <TextField
                       styleClass="inputField"
               >
               </TextField>
           </VBox>

           <VBox styleClass="inputContainer">
               <Label
                       text="Re-Enter your Password"
               >
               </Label>

               <TextField
                       styleClass="inputField"
               >
               </TextField>
           </VBox>
       </HBox>

        <HBox>
            <VBox styleClass="inputContainer">
                <Label
                        text="First Name"
                >
                </Label>

                <TextField
                        styleClass="inputField"
                >
                </TextField>
            </VBox>

            <VBox styleClass="inputContainer">
                <Label
                        text="Last Name"
                >
                </Label>

                <TextField
                        styleClass="inputField"
                >
                </TextField>
            </VBox>
        </HBox>

        <VBox styleClass="inputContainer">
            <Label
                    text="Email"
            >
            </Label>

            <TextField
                    styleClass="inputField"
            >
            </TextField>
        </VBox>

        <VBox styleClass="inputContainer">
            <Label
                    text="Phone Number"
            >
            </Label>

            <TextField
                    styleClass="inputField"
            >
            </TextField>
        </VBox>

        <ComboBox promptText="Account Type">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Manager" />
                    <String fx:value="Seller" />
                    <String fx:value="Customer" />
                </FXCollections>
            </items>
        </ComboBox>

        <Button
                text="Submit"
                styleClass="submitButton"
        >

        </Button>
    </VBox>

    </StackPane>

</AnchorPane>
